---
import Layout from '../layouts/Layout.astro';
import ThemeStitcher from '../components/ThemeStitcher.jsx';
---

<Layout title="Theme Stitcher">
  <main class="container mx-auto p-4 max-w-4xl">
    <h1 class="text-3xl font-bold mb-6 text-center">Theme Stitcher</h1>
    <p class="mb-8 text-center">Upload light and dark theme screenshots, crop them identically, and stitch them together.</p>
    <ThemeStitcher client:load />
  </main>
</Layout>