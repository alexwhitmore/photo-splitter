---
import Layout from '../layouts/Layout.astro';
import ImageStitcher from '../components/ImageStitcher.jsx';
---

<Layout title="Photo Stitcher">
  <main class="container mx-auto p-4 max-w-4xl">
    <h1 class="text-3xl font-bold mb-6 text-center">Image Stitcher</h1>
    <p class="mb-8 text-center">Upload two images of your choice and stitch them together.</p>
    <ImageStitcher client:load />
  </main>
</Layout>